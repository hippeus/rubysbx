<h1>Articles listing pages</h1>

<table>
  <thred>
    <tr>
      <th> Title </th>
      <th>Description </th>
      <th> Actions </th>
    </tr>
  </thred>

  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td> <%= article.title %> </td>
      <td> <%= article.description %> </td>
      <td> <%= link_to 'Show', article_path(article.id), method: :get %> </td>
      <td> <%= link_to 'Edit', article_path(article.id), method: :get %> </td>
      <td> <%= link_to 'Delete', article_path(article.id), method: :delete %> </td>
    </tr>
    <% end %>
  </tbody>
</table>